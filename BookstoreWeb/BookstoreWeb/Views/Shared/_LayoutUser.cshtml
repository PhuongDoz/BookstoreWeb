<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Book Store Template, Free CSS Template, CSS Website Layout</title>
    <meta name="keywords" content="Book Store Template, Free CSS Template, CSS Website Layout, CSS, HTML" />
    <meta name="description" content="Book Store Template, Free CSS Template, Download CSS Website" />
    <link href="../../Content/themes/templatemo_style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/PagedList.css" rel="stylesheet" />

</head>
<body>

    <div id="templatemo_container">
        <div id="templatemo_menu">
            <ul>
                <li><a href="@Url.Action("Index", "BookStore")" class="current"><i class="fa fa-home"></i> TRANG CHỦ</a></li>

                @if(Session["Taikhoan"] == null)
                {
                    <li style="margin-left:580px"> <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Dangnhap", "Nguoidung")'">Đăng nhập</button> </li>
                    <li> <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Dangky", "Nguoidung")'">Đăng ký</button> </li>
                }
                else
                {
                    <li style="float: right;">
                        @using (Html.BeginForm("Dangxuat", "Nguoidung"))
                        {
                            <button type="submit" style="margin: -10px 2em 0 0;" class="btn btn-danger">Đăng xuất</button>
                        }
                    </li>
                }
                <li style="float:right ;margin-right:30px"> <i class="fa fa-shopping-cart"> @{Html.RenderAction("GioHangPartial", "Giohang"); }</i></li>
                
            </ul>
           


        </div> <!-- end of menu -->

        <div id="templatemo_header">

            <img style="width:1150px; height:280px;" src="~/images/Bookstore.jpg" />     

        </div> <!-- end of header -->

        <div id="templatemo_content">

            <div id="templatemo_content_left">
                <div class="templatemo_content_left_section">
                    <h1>CHỦ ĐỀ SÁCH</h1>
                    <ul>
                       @Html.Action("Chude", "BookStore")
                    </ul>
                </div>
                <div class="templatemo_content_left_section">
                    <h1>NHÀ XUẤT BẢN</h1>
                    <ul>
                        @Html.Action("Nhaxuatban", "BookStore")
                    </ul>
                </div>

                <div class="templatemo_content_left_section">
                    <a href="http://validator.w3.org/check?uri=referer"><img style="border:0;width:88px;height:31px" src="http://www.w3.org/Icons/valid-xhtml10" alt="Valid XHTML 1.0 Transitional" width="88" height="31" vspace="8" border="0" /></a>
                    <a href="http://jigsaw.w3.org/css-validator/check/referer"><img style="border:0;width:88px;height:31px" src="http://jigsaw.w3.org/css-validator/images/vcss-blue" alt="Valid CSS!" vspace="8" border="0" /></a>
                </div>
            </div> <!-- end of content left -->

            <div id="templatemo_content_right">
              
                    @RenderBody();
            </div>


                <div class="cleaner_with_height">&nbsp;</div>
            </div> <!-- end of content -->

            <div id="templatemo_footer">

             
                Copyright © 2018 <a href="#"><strong>PDBooks</strong></a> | <a href="http://www.iwebsitetemplate.com" target="_parent">Giao diện trang</a> thuộc <a href="http://www.templatemo.com" target="_parent" title="free css templates">Free CSS Templates</a>
            </div>
            <!-- end of footer -->
            <!--  Free CSS Template www.templatemo.com -->
        </div> <!-- end of container -->
       
</body>
</html>
