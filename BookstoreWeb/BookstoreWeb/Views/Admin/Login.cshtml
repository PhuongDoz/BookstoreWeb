
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta charset="UTF-8">
    <title>Simple login form</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">


    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
      
        <div class="login">

            @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <h1 class="login-heading">
            <strong>Welcome.</strong> Please login.

        </h1>
        <h4 style="color:red ; text-align:center">@ViewBag.Thongbao</h4>

        <form method="post">

            <input type="text" name="username" placeholder="Username" class="input-txt" />
            @ViewData["Loi1"]

            <input type="password" name="password" placeholder="Password" class="input-txt" />
            @ViewData["Loi2"]
            <div class="login-footer">
                <a href="#" class="lnk">
                    <span class="icon icon--min">ಠ╭╮ಠ</span>
                    I've forgotten something
                </a>
                <button type="submit" class="btn btn--right">Sign in  </button>


            </div>
        </form>
}
        </div>
    </div>


    <script src="~/Scripts/index.js"></script>
</body>
</html>
